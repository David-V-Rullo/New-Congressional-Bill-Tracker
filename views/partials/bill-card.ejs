<div class="w-89 p-3 my-5 border border-primary">
  <div class="bill-card p-2">
    <h4 id="bill-id"> <%= bill.bill_id.toUpperCase() %> </h4>
    <h5 id="bill-title"> <%= bill.title %> </h5>
    <hr>
    <p id="sponsor">
          Sponsor:&nbsp;<a id="sponsor-title"> <%= bill.sponsor_title %> </a
          ><a id="sponsor-name"> <%= bill.sponsor_name %> <%= bill.sponsor_party %> - <%= bill.sponsor_state %> </a>
        </p>
        <p>Committee:&nbsp;<span id="committee"> <%= bill.committees %> </span></p>
    <p id="bill-long-title"> <%= bill.summary %> </p>
    <div class="bill-status mx-auto w-75 align-content-center">
     
      <button class="status-button active-status" id="introduced">
        Introduced
      </button>
      
      <button class="status-button inactive-status" id="pass-house">
        Passed House
      </button>
      <button
        class="status-button inactive-status"
        id="pass-senate"
      >
        Passed Senate
      </button>
      <button class="status-button inactive-status" id="became-law">
        Became Law
      </button>
    </div>
  </div>
</div>